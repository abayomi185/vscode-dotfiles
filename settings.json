{
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "One Dark Pro",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "material-icon-theme",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "python.formatting.provider": "black",
  "editor.largeFileOptimizations": false,
  "diffEditor.maxFileSize": 0,
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.terminal.activateEnvironment": false,

  // VSCode Vim
  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": [":noh"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    },
    {
      // This focuses the hover window
      "before": ["K"],
      "commands": [{ "command": "editor.action.showDefinitionPreviewHover" }]
    },
    // {
    //   "before": ["K"],
    //   "commands": ["editor.action.showHover"]
    // },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    // MOVE LINES
    {
      "before": ["alt+j"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["alt+k"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    // QUICK OPEN
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
      //  "when": "inFilesPicker && inQuickOpen" }]
    },
    {
      "before": ["<leader>", "s", "t"],
      "commands": ["livegrep.search"]
    },
    // BUFFER COMMANDS
    {
      "before": ["<leader>", "b", "h"],
      "commands": ["workbench.action.closeEditorsToTheLeft"]
    },
    {
      "before": ["<leader>", "b", "l"],
      "commands": ["workbench.action.closeEditorsToTheRight"]
    },
    // CODE ACTIONS
    {
      "before": ["<leader>", "l", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "j"],
      "commands": ["workbench.action.togglePanel"]
    },
    // {
    //   "before": ["<leader>", "t"],
    //   "commands": ["workbench.action.togglePanel"]
    // },
    // FILE TREE
    // {
    //   "before": ["<leader>", "e"],
    //   "commands": ["workbench.view.explorer"]
    //   // "when": "viewContainer.workbench.view.explorer.enabled"
    // },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    // CLOSE TAB
    {
      "before": ["<leader>", "c"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    // NAVIGATE TABS
    {
      // Navigate to the next tab
      "before": ["<S-l>"],
      "commands": ["workbench.action.nextEditor"]
    },

    {
      // Navigate to the previous tab
      "before": ["<S-h>"],
      "commands": ["workbench.action.previousEditor"]
    },
    // GIT
    {
      "before": ["<leader>", "g", "l"],
      "commands": ["gitlens.toggleFileBlame"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    // MOVE LINES
    {
      "before": ["<alt+j>"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["<alt+k>"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-j>": false
  },
  // End of VSCode Vim

  // Word completions
  // Available options for wordBasedSuggestions
  // "currentDocument" | "matchingDocuments" | "allDocuments",
  "editor.wordBasedSuggestionsMode": "currentDocument",

  "terminal.integrated.scrollback": 10000,
  "aws.telemetry": false,
  "diffEditor.maxComputationTime": 0,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "notebook.output.wordWrap": true,
  "aws.codeWhisperer.importRecommendation": false,
  "aws.codeWhisperer.shareCodeWhispererContentWithAWS": false,
  "aws.codeWhisperer.includeSuggestionsWithCodeReferences": false,
  "editor.formatOnSave": true,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "window.commandCenter": false,
  "mdb.confirmRunAll": false,
  "mdb.sendTelemetry": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "gitlens.hovers.currentLine.over": "line",
  "todohighlight.isEnable": true,
  "todo-tree.highlights.enabled": false,
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  }
}
